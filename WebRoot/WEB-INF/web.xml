<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0"
    xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
  <servlet>
    <description>My First Servlet From MyEclipse</description>
    <display-name>HelloServlet</display-name>
    <servlet-name>FileUpload</servlet-name>
    <servlet-class>com.bjsxt.shopping.servlet.FileUpload</servlet-class>
    <init-param>
    	<param-name>uploadpath</param-name>
    	<param-value>C:\\eclipse\\workspace\\Shopping\\WebRoot\\admin\\images\\product\\</param-value>
    </init-param>
  </servlet>
  <servlet>
    <description>My First Servlet From MyEclipse</description>
    <display-name>HelloServlet</display-name>
    <servlet-name>ShowProductSalesServlet</servlet-name>
    <servlet-class>com.bjsxt.shopping.reports.ShowProductSalesServlet</servlet-class>
  </servlet>


  <servlet-mapping>
    <servlet-name>FileUpload</servlet-name>
    <url-pattern>/servlet/FileUpload</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ShowProductSalesServlet</servlet-name>
    <url-pattern>/servlet/ShowProductSalesServlet</url-pattern>
  </servlet-mapping>

</web-app>